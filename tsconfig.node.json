{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "outDir": "dist-node",
    "types": ["node"]
  },
  "include": ["vite.config.ts", "vite.widget.config.ts"]
}